<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactListing.AddContactPage"
             Title="Add contact">
    <ContentPage.Content>
        <AbsoluteLayout>
            <StackLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                         AbsoluteLayout.LayoutFlags="All"
                         Padding="25"
                         Spacing="10">

                <Label Margin="0, 10, 0, 10" FontSize="18" Text="Enter the contact information: " />

                <Entry x:Name="nameEntry" Placeholder="Name" />

                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label VerticalOptions="Center" Text="+" />
                    <Entry x:Name="countryCodeEntry" WidthRequest="50" />
                    <Entry x:Name="numberEntry" Placeholder="Phone number" HorizontalOptions="FillAndExpand" />
                </StackLayout>
            </StackLayout>

            <StackLayout AbsoluteLayout.LayoutBounds="0, 1, 1, 0.15"
                         AbsoluteLayout.LayoutFlags="All"
                         Padding="25">
                <Button x:Name="addContactButton" HorizontalOptions="Fill" Text="Add contact" Clicked="AddContactButton_Clicked" />
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>